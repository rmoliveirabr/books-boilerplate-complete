{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node", // "bundler",
    "emitDecoratorMetadata": true,
    // "lib": ["dom", "dom.iterable", "esnext"],
    // "allowJs": true,
    // "noEmit": true,
    // "resolveJsonModule": true,
    // "isolatedModules": true,
    // "jsx": "preserve",
    // "incremental": true,

    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
